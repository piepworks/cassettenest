{
  "name": "film",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true inventory/static/inventory/scss/ -o inventory/static/inventory/css",
    "build-task:autoprefixer": "postcss inventory/static/inventory/css/*.css --use autoprefixer -d inventory/static/inventory/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'inventory/static/inventory/scss/**/*.scss' -c 'npm run sass:build'",
    "browsersync": "browser-sync start --proxy 'localhost:8000' --files 'inventory/static/inventory/css/*.css'",
    "dev": "npm-run-all -p sass:* browsersync"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/trey/django-film-inventory.git"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "browser-sync": "^2.23.6",
    "chokidar-cli": "^1.2.0",
    "node-sass-chokidar": "^1.1.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0"
  }
}
